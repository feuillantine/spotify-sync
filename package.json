{
  "name": "spotify-playlist-sync",
  "version": "1.0.0",
  "description": "Sync favorite tracks from one Spotify user to another user's playlist",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/index.js",
    "check": "tsc --noEmit && biome check .",
    "check:fix": "tsc --noEmit && biome check . --write",
    "get-refresh-token": "ts-node src/cli/get-refresh-token.ts"
  },
  "keywords": [
    "spotify",
    "playlist",
    "sync",
    "github-actions"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^11.1.1",
    "spotify-utility": "github:feuillantine/spotify-utility"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/express": "^5.0.1",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.17.28",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "spotify-utility"
    ]
  }
}
