{
  "name": "spotify-playlist-sync",
  "version": "1.0.0",
  "description": "Sync favorite tracks from one Spotify user to another user's playlist",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "format": "biome format .",
    "format:fix": "biome format . --write",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "test": "jest",
    "exec": "ts-node src/index.ts",
    "get-refresh-token": "ts-node src/cli/get-refresh-token.ts"
  },
  "keywords": ["spotify", "playlist", "sync", "github-actions"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "date-fns": "^2.30.0",
    "fs-extra": "^11.1.1",
    "spotify-web-api-node": "^5.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/express": "^5.0.1",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.17.28",
    "@types/spotify-web-api-node": "^5.0.11",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
